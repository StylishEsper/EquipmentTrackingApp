<UserControl x:Class="NETD3202_Lab2.ViewLentOut"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NETD3202_Lab2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="0">
            <!--Title-->
            <Label Content="View Equipment Lent Out" Width="235" Margin="1,0,1,0" FontSize="20"/>
            <DataGrid x:Name="gridLent" LoadingRow="gridLent_LoadingRow" IsReadOnly="True" IsHitTestVisible="False" ColumnWidth="180" Height="456"/>

            <!--DataGrid that displays all the lent out items-->
        </StackPanel>
    </Grid>
</UserControl>
